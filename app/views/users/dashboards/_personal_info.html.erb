<h2 style="text-align:center;">
  <%= user.first_name %> <%= user.last_name %>
</h2>

<h3 class="text-center job-title">
  <% if user.job_title%>
    <%=user.job_title%>
  <%else%>
    Unknown Job Title
  <%end%>
</h3>

<h4 class="text-center location">
  <% if user.location%>
    <%=user.location%>
  <%else%>
    Unknown Location
  <%end%>
</h4>


