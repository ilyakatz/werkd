<%= simple_form_for([:users,@project]) do |f| %>
  <%=f.input :title%>
  <%=f.input :company%>
  <%=f.input :media_url, 
    input_html: 
    {
    value: "http://www.youtube.com/watch?v=80yIdY5Kyho",
    class: "embed-link" 
  }
%>
<div class="selector-wrapper"></div>

<br/>
<%=f.submit%>
<% end %>


<% content_for :dom_ready do %>
  <link rel="stylesheet" href="http://cdn.embed.ly/jquery.preview-0.3.2.css" />
  <%= javascript_include_tag "http://cdn.embed.ly/jquery.preview-0.3.2.min.js" %>
  <%= javascript_include_tag "http://cdn.embed.ly/jquery.embedly-3.1.1.min.js" %>
  <script>

    $('document').ready(function(){
      $('.embed-link').preview({key:'<%=Figleaf::Settings.embedly.api_key%>'})
    });


  </script>

<% end %>
